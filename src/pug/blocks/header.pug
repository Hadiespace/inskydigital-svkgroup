-
	const navigationLinks = [
		{ name: 'Каталог', href: 'catalog.html', current: 'navigation__item--current' },
		{ name: 'Услуги', href: 'services.html' },
		{ name: 'Контакты', href: 'contacts.html' },
		{ name: 'О нас', href: 'about.html' },
	];

	const menuLinks = [
		{ name: 'Главная', href: 'index.html' },
		{ name: 'Каталог', href: 'catalog.html', current: 'menu__item--current' },
		{ name: 'Услуги', href: 'services.html' },
		{ name: 'Контакты', href: 'contacts.html' },
		{ name: 'О нас', href: 'about.html' },
	];

	const anotherLinks = [
		{ name: 'О компании', href: 'about.html', current: 'menu__another-item--current' },
		{ name: 'Портфолио', href: 'portfolio.html' },
		{ name: 'Технологии', href: 'index.html' },
	];

header.header(class=whiteHeader, class=headerNoIndex)
	div.header__container.container
		a.header__logo.logo(href=!indexPage ? 'index.html' : null)
			img(src="images/logo.svg", alt="Логотип СВК ГРУППА")
		ul.header__navigation.navigation
			each link in navigationLinks
				li.navigation__item(class=link.current)
					a(href=link.href)!= link.name
		a.header__phone(href="tel:+7(499)702-31-31")
			svg(width="18", height="28", aria-hidden="true")
				use(xlink:href="images/sprite-mono.svg#mono--mobile")
			span +7 (499) 702-31-31
		form.header__search.search-header(action="result.html")
			button.search-header__button(type="button", aria-controls="header-search", aria-expanded="false")
				span.visually-hidden Открыть поиск
				svg(width="28", height="27", aria-hidden="true")
					use(xlink:href="images/sprite-mono.svg#mono--search")
			button.search-header__submit(type="submit")
				span.visually-hidden Искать на сайте
				svg(width="28", height="27", aria-hidden="true")
					use(xlink:href="images/sprite-mono.svg#mono--search")
			input.header__search-input.search-header__input(id="header-search", type="text", name="search", placeholder="Поиск")
		button.header__menu-toggle(type="button", aria-controls="menu", aria-expanded="false")
			span.visually-hidden Открыть меню
			span
			span
			span
	div.header__menu.menu
		div.menu__container.container
			form.menu__search.search-header(action="result.html")
				button.search-header__submit(type="submit")
					span.visually-hidden Искать на сайте
					svg(width="28", height="27", aria-hidden="true")
						use(xlink:href="images/sprite-mono.svg#mono--search")
				input.search-header__input(id="menu-search", type="text", name="search", placeholder="Поиск")
			ul.menu__list(id="menu")
				each link in menuLinks
					li.menu__item(class=link.current)
						a(href=link.href)!= link.name
			ul.menu__another-list
				each link in anotherLinks
					li.menu__another-item(class=link.current)
						a(href=link.href)!= link.name
			div.menu__contacts
				a.menu__contact.menu__contact--phone(href="tel:+7(499)702-31-31")
					svg(width="14", height="21", aria-hidden="true")
						use(xlink:href="images/sprite-mono.svg#mono--mobile")
					span +7 (499) 702-31-31
				address.menu__contact.menu__contact--address
					svg(width="16", height="23", aria-hidden="true")
						use(xlink:href="images/sprite-mono.svg#mono--address")
					span г. Москва, ул. Часовая, дом 28, к. 4
			button.menu__modal-open.button.modal-open(type="button")
				span Оставить заявку
				svg(width="39", height="14", aria-hidden="true")
					use(xlink:href="images/sprite-mono.svg#mono--arrow-right-big")
